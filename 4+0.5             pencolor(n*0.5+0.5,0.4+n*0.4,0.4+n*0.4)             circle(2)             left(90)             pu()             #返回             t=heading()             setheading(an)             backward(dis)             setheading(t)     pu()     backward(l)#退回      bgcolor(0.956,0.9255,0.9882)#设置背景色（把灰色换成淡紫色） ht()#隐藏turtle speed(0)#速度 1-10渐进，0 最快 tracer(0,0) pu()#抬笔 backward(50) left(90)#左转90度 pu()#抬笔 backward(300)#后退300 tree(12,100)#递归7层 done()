from turtle import *
from random import *
from math import *

def tree(n,l):
    pd()#ä¸‹ç¬”
    #é˜´å½±æ•ˆæœ
    t = cos(radians(heading()+45))/8+0.25
    pencolor(t,t,t)
    pensize(n/3)
    forward(l)#ç”»æ ‘æ

    if n>0:
        b = random()*15+10 #å³åˆ†æ”¯åè½¬è§’åº¦
        c = random()*15+10 #å·¦åˆ†æ”¯åè½¬è§’åº¦
        d = l*(random()*0.25+0.7) #ä¸‹ä¸€ä¸ªåˆ†æ”¯çš„é•¿åº¦
        #å³è½¬ä¸€å®šè§’åº¦,ç”»å³åˆ†æ”¯
        right(b)
        tree(n-1,d)
        #å·¦è½¬ä¸€å®šè§’åº¦ï¼Œç”»å·¦åˆ†æ”¯
        left(b+c)
        tree(n-1,d)
        #è½¬å›æ¥
        right(c)
    else:
        #ç”»å¶å­
        right(90)
        n=cos(radians(heading()-45))/4+0.5
        ran=random()
        #è¿™é‡Œç›¸æ¯”äºåŸæ¥éšæœºæ·»åŠ äº†å¡«å……çš„åœ†åœˆï¼Œè®©æ¨±èŠ±å¶å­çœ‹èµ·æ¥æ›´å¤šä¸€ç‚¹
        if(ran>0.7):
            begin_fill()
            circle(3)
            fillcolor('pink')
        #æŠŠåŸæ¥éšæœºç”Ÿæˆçš„å¶å­æ¢æˆäº†ç»Ÿä¸€çš„ç²‰è‰²
        pencolor("pink")
        circle(3)
        if(ran>0.7):
            end_fill()
        left(90)
        #æ·»åŠ 0.3å€çš„é£˜è½å¶å­
        if(random()>0.7):
            pu()
            #é£˜è½
            t = heading()
            an = -40 +random()*40
            setheading(an)
            dis = int(800*random()*0.5 + 400*random()*0.3 + 200*random()*0.2)
            forward(dis)
            setheading(t)
            #ç”»å¶å­
            pd()
            right(90)
            n = cos(radians(heading()-45))/4+0.5
            pencolor(n*0.5+0.5,0.4+n*0.4,0.4+n*0.4)
            circle(2)
            left(90)
            pu()
            #è¿”å›
            t=heading()
            setheading(an)
            backward(dis)
            setheading(t)
    pu()
    backward(l)#é€€å›
    
bgcolor(0.956,0.9255,0.9882)#è®¾ç½®èƒŒæ™¯è‰²ï¼ˆæŠŠç°è‰²æ¢æˆæ·¡ç´«è‰²ï¼‰
ht()#éšè—turtle
speed(0)#é€Ÿåº¦ 1-10æ¸è¿›ï¼Œ0 æœ€å¿«
tracer(0,0)
pu()#æŠ¬ç¬”
backward(50)
left(90)#å·¦è½¬90åº¦
pu()#æŠ¬ç¬”
backward(300)#åé€€300
tree(12,100)#é€’å½’7å±‚
done()
